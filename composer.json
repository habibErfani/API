{
    "name": "habiberfani/api",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Test\\": "tests/",
            "Migrations\\": "migrations/"
        }
    },
    "authors": [
        {
            "name": "habib erfani",
            "email": "hbberfani@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ramsey/uuid": "^4.7",
        "doctrine/dbal": "^3.6",
        "doctrine/orm": "^3.0.2",
        "symfony/cache": "^6.2",
        "doctrine/migrations": "^3.6",
        "league/fractal": "^0.20.1",
        "kdubuc/php-cs-fixer-rules": "^1.2",
        "pagerfanta/pagerfanta": "^4.1",
        "laminas/laminas-servicemanager": "^3.20",
        "guzzlehttp/guzzle": "^7.5",
        "guzzlehttp/psr7": "^2.5",
        "laminas/laminas-di": "^3.12",
        "spatie/fractalistic": "^2.9",
        "league/route": "^5.1",
        "psr/http-server-handler": "^1.0",
        "middlewares/payload": "^3.0",
        "symfony/http-client": "^6.2",
        "http-interop/response-sender": "^1.0",
        "vlucas/phpdotenv": "^5.5",
        "fig/http-message-util": "^1.1",
        "fakerphp/faker": "^1.22"

    },
    "scripts": {
        "fix-cs": "php vendor/bin/php-cs-fixer fix --config=vendor/kdubuc/php-cs-fixer-rules/php-cs-fixer.php",
        "check-cs": "php vendor/bin/php-cs-fixer fix -v --dry-run --stop-on-violation --using-cache=no --config=vendor/kdubuc/php-cs-fixer-rules/php-cs-fixer.php",
        "analyze": "php vendor/bin/psalm --config=psalm.xml",
        "test": "php vendor/bin/phpunit --configuration phpunit.xml"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "vimeo/psalm": "dev-master as 6.13.1"
    },

    "license": "proprietary",
    "description": "API de test pour d√©monstration locale"
}
